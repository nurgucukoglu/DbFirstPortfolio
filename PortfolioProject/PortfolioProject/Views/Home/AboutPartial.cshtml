@model List<PortfolioProject.Models.ProfileTbl>
@{
    ViewBag.Title = "AboutPartial";
    Layout = "~/Views/Shared/_PortfolioLayout.cshtml";
}


<!-- banner section -->
@foreach (var item in Model)
{
    <section id="home" class="w3l-banner pb-5">
        <div class="container pb-md-3">
            <div class="banner-wrapper text-center">
                <div class="">
                    <span class="text">About Me</span>
                    <h1 class="mb-4 title">
                        Hello, I'm @item.Name @item.Surname<br>

                        I’m working as @item.Job
                    </h1>
                    <p class="mx-lg-5">
                        @item.Description
                    </p>
                </div>
                <div class="row">
                    <div class="col-lg-8 mx-lg-auto col-md-10">
                        <img src="~/Content/iportfolio-starter/assets/images/banner.png" alt="" class="img-fluid mt-lg-5 mt-3">
                    </div>
                </div>
                <ul class="follow-social">
                    <li><p>Follow me </p></li>
                    <li><a href="#url"><span class="fa fa-behance"></span></a></li>
                    <li><a href="#url"><span class="fa fa-linkedin"></span></a></li>
                    <li><a href="#url"><span class="fa fa-facebook-official"></span></a></li>
                    <li><a href="#url"><span class="fa fa-twitter"></span></a></li>
                </ul>
            </div>
        </div>
    </section>
}

